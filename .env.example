# ========================
# Основные настройки приложения
# ========================
APP_NAME=Laravel                  # Название приложения (используется в письмах и т.д.)
APP_ENV=local                     # Окружение: local, production, testing и т.д.
APP_KEY=                          # Ключ шифрования приложения (генерируется автоматически)
APP_DEBUG=true                    # Режим отладки (true/false)
APP_TIMEZONE=UTC                  # Часовой пояс сервера
APP_URL=http://localhost          # Базовый URL приложения

# ========================
# Локализация
# ========================
APP_LOCALE=en                     # Язык по умолчанию
APP_FALLBACK_LOCALE=en            # Резервный язык
APP_FAKER_LOCALE=en_US            # Локаль для генерации тестовых данных

# ========================
# Настройки сервера
# ========================
APP_MAINTENANCE_DRIVER=file       # Драйвер для режима обслуживания (file, redis и т.д.)
PHP_CLI_SERVER_WORKERS=4          # Количество workers для встроенного PHP-сервера

# ========================
# Безопасность
# ========================
BCRYPT_ROUNDS=12                  # Количество раундов хеширования паролей

# ========================
# Логирование
# ========================
LOG_CHANNEL=stack                 # Канал логирования по умолчанию
LOG_STACK=single                  # Тип стека логов (single, daily и т.д.)
LOG_DEPRECATIONS_CHANNEL=null     # Канал для устаревшего функционала
LOG_LEVEL=debug                   # Уровень детализации логов

# ========================
# База данных
# ========================
DB_CONNECTION=sqlite              # Драйвер БД (mysql, pgsql, sqlite и т.д.)

# ========================
# Сессии
# ========================
SESSION_DRIVER=database           # Хранилище сессий (file, cookie, database, redis)
SESSION_LIFETIME=120              # Время жизни сессии в минутах
SESSION_ENCRYPT=false             # Шифрование данных сессии
SESSION_PATH=/                    # Путь для cookie сессии
SESSION_DOMAIN=null               # Домен для cookie сессии

# ========================
# Другие драйверы
# ========================
BROADCAST_CONNECTION=log          # Трансляция событий (log, pusher, redis)
FILESYSTEM_DISK=local             # Файловое хранилище (local, s3 и т.д.)
QUEUE_CONNECTION=database         # Очереди (sync, database, redis, sqs)

# ========================
# Vite (Frontend)
# ========================
VITE_APP_NAME="${APP_NAME}"       # Название приложения для фронтенда

# ========================
# Кастомные настройки
# ========================
UPLOAD_MAX_SIZE=                  # Максимальный размер загружаемых файлов

# ========================
# Keycloak OAuth
# ========================
KEYCLOAK_CLIENT_ID=               # ID клиента в Keycloak
KEYCLOAK_CLIENT_SECRET=           # Секретный ключ для Keycloak
KEYCLOAK_BASE_URL=                # Базовый URL сервера Keycloak
KEYCLOAK_REALM=                   # Realm в Keycloak
